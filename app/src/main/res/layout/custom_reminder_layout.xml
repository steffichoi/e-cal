<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/custom_reminder_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="Custom Reminder"
        android:textSize="24dp"
        android:textAppearance="@style/Animation.AppCompat.Dialog"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/custom_reminder_min_edit_text"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_reminder_header_text_view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/custom_reminder_min_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/custom_reminder_min_edit_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="mins"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/custom_reminder_hour_edit_text"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_reminder_min_edit_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/custom_reminder_hour_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/custom_reminder_hour_edit_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="hours"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/custom_reminder_days_edit_text"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_reminder_hour_edit_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/custom_reminder_days_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/custom_reminder_days_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/custom_reminder_days_edit_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="days"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/custom_reminder_days_edit_text"
        app:layout_constraintRight_toRightOf="@id/custom_reminder_days_text_view"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_done_white_24dp" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/custom_reminder_days_edit_text"
        app:layout_constraintRight_toLeftOf="@+id/save_button"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_clear_white_24dp" />



</android.support.constraint.ConstraintLayout>