<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.android.me_cal.MainActivity">

    <TextView
        android:id="@+id/detail_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="5dp"/>


    <ImageView
        android:id="@+id/detail_item_start_time_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_access_time_blue_24dp"
        />

    <TextView
        android:id="@+id/detail_item_start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_start_time_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="start date"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_item_start_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_start_date_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_start_time_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="start time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_item_to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_start_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_start_time_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="to"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detail_item_end_time_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_to_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_access_time_blue_24dp"
        />

    <TextView
        android:id="@+id/detail_item_end_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_to_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_end_time_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="end date"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_item_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_end_date_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_end_time_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="end time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detail_item_location_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_end_time_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_location_on_blue_24dp"
        />

    <TextView
        android:id="@+id/detail_item_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_end_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_location_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="location"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/detail_item_reminder_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_location_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_access_alarm_blue_24dp"
        />


    <TextView
        android:id="@+id/detail_item_reminder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_location_tv"
        app:layout_constraintLeft_toRightOf="@+id/detail_item_reminder_iv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="reminder"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_item_type_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_reminder_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Type:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_item_reminder_tv"
        app:layout_constraintLeft_toRightOf="@id/detail_item_type_header_tv"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="type"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/detail_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_type_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_delete_blue_24dp"/>


    <ImageView
        android:id="@+id/detail_item_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_item_type_tv"
        app:layout_constraintRight_toLeftOf="@id/detail_item_delete_button"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_edit_blue_24dp"
        />

