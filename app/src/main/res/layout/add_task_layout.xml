<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/event_name_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/todayLayoutView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Name"
        />

    <EditText
        android:id="@+id/event_date_edit_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_name_edit_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Date"
         />
    <EditText
        android:id="@+id/event_time_edit_text"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/event_date_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Time"
         />

    <EditText
        android:id="@+id/event_duration_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_time_edit_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Duration"
        />

    <EditText
        android:id="@+id/event_type_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_duration_edit_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Type"
        />

    <EditText
        android:id="@+id/event_reminder_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_type_edit_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Duration"
        />

    <EditText
        android:id="@+id/event_location_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_reminder_edit_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="Event Location"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/event_location_edit_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_done_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cancel_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/event_location_edit_text"
        app:layout_constraintRight_toLeftOf="@+id/save_fab"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_clear_white_24dp" />



</android.support.constraint.ConstraintLayout>